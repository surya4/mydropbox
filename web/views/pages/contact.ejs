<html lang="en">
<% include ../partials/header %>

    <body>
        <% include ../partials/nav %>
            <div class="container">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Contact Form</h3>
                    </div>
                    <div class="panel-body">
                        <% if(messages.success) {%>
                            <div class="alert alert-success" role="alert">
                                <% for(success in messages.success) {%>
                                    <div>
                                        <% success.msg %>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                                <% if(messages.error) {%>
                                    <div class="alert alert-danger" role="alert">
                                        <% for(error in messages.error) {%>
                                            <div>
                                                <% error.msg %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                    </div>
                    <div class="form form-horizontal" method="POST">
                        <div class="form-group">
                            <label class="col-sm-2" for="name">Name</label>
                            <div class="col=sm-8">
                                <input class="form-control" type="text" name="name" id="name" autofocus="autofocus" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" for="email">Email</label>
                            <div class="col=sm-8">
                                <input class="form-control" type="email" name="email" id="email" autofocus="autofocus" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" for="message">Body</label>
                            <div class="col=sm-8">
                                <textarea class="form-control" name="message" id="message" rows="7"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col=sm-8">
                                <button class="btn btn-success" type="submit">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class=""></div>
            </div>
            <% include ../partials/footer %>
                <% include ../partials/scripts %>
    </body>

</html>